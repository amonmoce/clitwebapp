-if @okay
  %a You have just registered #{@classname} ... Now upload the class material
  %form{action: '/upload', method: 'post', enctype: 'multipart/form-data'}
    %input{type: 'file', name: 'file'}
    %input{type: 'submit'}
-elsif @upload
  %a You have uploaded #{@filename}
-else
  %form{action: '/register', method: 'post'}
    %input{type: 'text', name: 'classname'}
    %input{type: 'text', name: 'classcode'}
    %input{type: 'text', name: 'teachercode'}
    %input{type: 'submit'}
